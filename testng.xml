<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="LT_Selenium" parallel="tests">
    <test thread-count="3" name="Chrome on Windows 10">
        <parameter name="browser" value="chrome" />
        <parameter name="browserVersion" value="latest" />
        <parameter name="platform" value="Windows 10" />
        <classes>
            <class name="seleniumPKG.Scenarios_LT" />
        </classes>
    </test>

    <test thread-count="3" name="firefox on macOS Ventura">
        <parameter name="browser" value="firefox" />
        <parameter name="browserVersion" value="latest" />
        <parameter name="platform" value="macOS Ventura" />
        <classes>
            <class name="seleniumPKG.Scenarios_LT" />
        </classes>
    </test>
</suite> <!-- LT_TestNg -->
